{
    "manifest_version": 3,
    "name": "Gmail AI Chatbot",
    "version": "1.0",
    "description": "A chatbot that helps with Gmail email responses using AI.",
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": ["http://localhost:5000/*"],
    "content_scripts": [
      {
        "matches": ["https://mail.google.com/*"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  